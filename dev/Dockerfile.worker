# syntax=docker/dockerfile:1.4
# Worker service Dockerfile - runs arq workers for job processing

FROM ubuntu:22.04

# Install Python 3.10 and dependencies
RUN apt-get update && apt-get install -y --no-install-recommends \
    python3.10 \
    python3-pip \
    curl \
    ca-certificates \
    && rm -rf /var/lib/apt/lists/* \
    && ln -s /usr/bin/python3.10 /usr/bin/python

# Install Poetry
RUN python3 -m pip install --no-cache-dir poetry

WORKDIR /app

# Copy pyproject.toml and poetry.lock from backend directory
COPY backend/pyproject.toml backend/poetry.lock backend/README.md ./

# Configure Poetry to create virtualenv in project directory
ENV POETRY_NO_INTERACTION=1 \
    POETRY_VIRTUALENVS_IN_PROJECT=1 \
    POETRY_CACHE_DIR=/root/.cache/pypoetry

# Install dependencies with BuildKit cache
RUN --mount=type=cache,target=/root/.cache/pypoetry \
    poetry install --no-root

# Add venv to PATH
ENV PATH="/app/.venv/bin:$PATH"

# Source code will be mounted as a volume at runtime
